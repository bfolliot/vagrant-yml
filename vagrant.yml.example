      #       uservar: "vagrant"
      #     :limit: "all"
      #     :verbose: "vvv"
  database:
    box: 
      name: 'ubuntu/trusty64'
    hostname: 'mysql.vagrant-yml.dev'
    vbguest:
      auto_update: true
      no_remote: false
      auto_reboot: true
  sandbox:
    box:
      name: 'ubuntu/trusty64'
